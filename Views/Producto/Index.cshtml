@model IEnumerable<InventatioMVC.Models.Productos>

@{
    ViewData["Title"] = "Index";
}

<h2>Productos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unidad_Medida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Peso_KG)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidad_Medida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso_KG)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
