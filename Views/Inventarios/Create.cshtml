@model InventatioMVC.Models.Inventario

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Inventario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Productos" class="control-label"></label>
                <select asp-for="ProductosId" 
                        asp-items="@(new SelectList(ViewBag.ProductoList,"Id","Nombre"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Productos" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
