@model IEnumerable<InventatioMVC.Models.Inventario>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a  asp-action="Create" class="btn btn-primary">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productos.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Productos.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalle</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Elliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
